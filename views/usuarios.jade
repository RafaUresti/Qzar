extends menu
block content
  link(rel='stylesheet', href="/stylesheets/qzar-actividades.css", type='text/css')
  //Contenido de Pagina
  div#page-wrapper
    div.container-fluid

      //- if aviso
      //-   div.row
      //-     div(class="alert alert-#{aviso.tipo} col-md-6 col-md-offset-3", role="alert")
      //-       i(class="#{aviso.icono}")
      //-       p.inline #{aviso.mensaje}

      div.row
        div#barra-de-actividades
          div.col-sm-12.col-md-8.col-md-offset-2
            i#actividad.fa.fa-fw.fa-edit.fa-5x.inline
            h1#h1Actividades #{title}
            a(class='nav navbar-right top-nav' href='#' data-toggle="modal" data-target="#FAA" id='boton-agregar')
              i.material-icons.md-48#boton-agregar-actividad control_point
              p Agregar
        //Contenido de la pagina
        div.col-sm-12.col-md-8.col-md-offset-2
          if actividades && actividades.length
            table.table.table-striped.table-bordered
              thead
                th  Nombre
                th  Descripcion
                th
              tbody
                each actividad in actividades
                  tr
                    td(class='id' style='display:none;') #{actividad.idActividad}
                    td(class='nombre') #{actividad.nombre}
                    td(class='descripcion') #{actividad.descripcion}
                    //td(class='img' style='display:none;') #{actividad.ruta} 
                    //poner TD con class img
                    td#botones-modificar 
                      button.btn.btn-primary(type="button" class="modificar" data-toggle="modal" data-target="#MAA" id='boton-modificar') Modificar
                      &nbsp&nbsp&nbsp
                      button.btn.btn-default(type="button" class="eliminar" data-dismiss="modal") Eliminar
          else
            p.watermark No se han encontrado usuarios en el sistema.
            
    //Modal Agregar
    div(id='MAU' class='modal fade' role='dialog')
      div.modal-dialog
        //Contenido modal
        div.modal-content
          div.modal-header
            button(type='button' class='close' data-dismiss="modal") &times;
            h4.modal-title Agregar Usuario
          form(action="/actividades/agregausuario" method="post" onsubmit="return checkform(this);" id="AgregaUsuario")
            div.modal-body 
              label Nombre
              input.form-control(type="text" name="nombreusuario" size="58")
              label Contraseña 
              input.form-control(type="password" rows='5' cols='60' name="contrasenausuario")
              label Reingresa Contraseña
              input.form-control(type="password" rows='5' cols='60' name="recontrasenausuario")
            div.modal-footer
              button.btn.btn-primary(type="submit" ) Agregar
              button.btn.btn-default(type="button" data-dismiss="modal") Cerrar
    script(language="JavaScript" type="text/javascript").
      function checkform ( form ) {
        if(form.nombreusuario.value == "") {
          alert("Nombre del Usuario vacio");
          form.nombreusuario.focus();
          return false;
          }
        if(form.contrasenausuario.value == "") {
          alert("Contraseña del Usuario vacio");
          form.contrasenausuario.focus();
          return false;
        }
        if(form.recontrasenausuario.value == "") {
          alert("Vuelve a escribir tu contraseña");
          form.recontrasenausuario.focus();
          return false;
        }
        if(form.contrasenausuario.value != form.recontrasenausuario.value) {
          alert("Tu contraseña no coincide");
          form.contrasenausuario.focus();
          return false;
        }
        else {
          return true;
          }
        }
      function resetform(){
        document.getElementById("AgregaUsuario").reset();
      }
