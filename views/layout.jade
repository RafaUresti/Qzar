doctype html
html
  head
    title= title
    //Bootstrap Core CSS
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')

    //Custom CSS de aqui viene el fondo negro
    link(rel='stylesheet', href='/bootstrap/css/sb-admin.css')

    //Custom Fonts
    link(rel='stylesheet', href='/bootstrap/font-awesome/css/font-awesome.min.css', type='text/css')

    link(rel='stylesheet', href='/stylesheets/style.css')

    
    //Calendars styles
    link(rel='stylesheet', href='/stylesheets/calendar.css')
    
    //Jquery
    script(src='/bootstrap/js/jquery.js')

    //Bootstrap Core JS
    script(src='/bootstrap/js/bootstrap.min.js')

    //Underscore
    script(src='https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js')

    //moment
    script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/moment.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/locale/es.js')

    //CLNDR
    script(src='/plugins/clndr.min.js')

  body
    block body
      if aviso
        div(class="alert alert-#{aviso.tipo}", role="alert")
          i(class="#{aviso.icono}")
          p.inline #{aviso.mensaje}
    block content



