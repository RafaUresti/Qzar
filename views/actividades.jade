extends menu
block content
  //Contenido de Pagina
  div#page-wrapper
    div.container-fluid
      div.row
        div.col-lg-12
          h1 #{title}
          a(class='nav navbar-right top-nav' href='#' data-toggle="modal" data-target="#FAA" id='boton-agregar')
            img(class='boton-agregar-actividad' src='/images/add2.png')
            p Agregar
          p La lista de actividades
      div.col-lg-12
        table.table.table.striped
          thead
            th  Nombre
            th  Descripcion
          tbody
            each actividad in actividades
              tr
                td(style='display:none;') #{actividad.idActividad}
                td #{actividad.nombre}
                td #{actividad.descripcion}
    //Modal
    div(id='FAA' class='modal fade' role='dialog')
      div.modal-dialog
        //Contenido modal
        div.modal-content
          div.modal-header
            button(type='button' class='close' data-dismiss="modal") &times;
            h4.modal-title Agregar Actividad
          form(action="/actividades/agregaactividad" method="post" onsubmit="return checkform(this);" id="AgregaActividad" enctype="multipart/form-data")
            div.modal-body 
              label Nombre
              input(type="text" name="nombreactividad" size="58")
              label Descripci√≥n 
              textarea(rows='5' cols='60' name="descripcionactividad")
              label Foto
              input(type="file" name="ima" size="58" )
            div.modal-footer
              button(type="submit" class="btn btn-success") Agregar
              button(type="button" class="btn btn-danger" data-dismiss="modal") Cerrar
    script(language="JavaScript" type="text/javascript").
      function checkform ( form ) {
        if(form.nombreactividad.value == "") {
          alert("Nombre de la Actividad Vacia");
          form.nombreactividad.focus();
          return false;
          }
        else {
          return true;
          }
        }
      function resetform(){
        document.getElementById("AgregaActividad").reset();
      }
